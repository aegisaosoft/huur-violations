{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "HUUR_API": "https://agsm-back.azurewebsites.net/",
  "JWT_SECRET_KEY": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-production-use",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=huur_violations;Username=postgres;Password=password;Pooling=true;MinPoolSize=0;MaxPoolSize=100;ConnectionLifetime=0;",
    "ProductionConnection": "Host=prod-db-host;Port=5432;Database=huur_violations_prod;Username=prod_user;Password=prod_password;Pooling=true;MinPoolSize=5;MaxPoolSize=200;ConnectionLifetime=0;SSL Mode=Require;",
    "DevelopmentConnection": "Host=localhost;Port=5432;Database=huur_violations_dev;Username=postgres;Password=password;Pooling=true;MinPoolSize=0;MaxPoolSize=50;ConnectionLifetime=0;"
  },
  "DatabaseSettings": {
    "Provider": "PostgreSQL",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30",
    "EnableServiceProviderCaching": true,
    "EnableQuerySplittingBehavior": "SplitQuery"
  }
}
