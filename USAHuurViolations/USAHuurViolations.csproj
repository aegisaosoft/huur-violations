<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="HuurApi">
      <HintPath>..\HuurViolations.Api\Loaders\HuurApi.dll</HintPath>
    </Reference>
    <ProjectReference Include="..\HuurVioaltionsAPI\HuurVioaltionsAPI.csproj" />
  </ItemGroup>

  <Target Name="CopyToLoaders" AfterTargets="Build">
    <Copy SourceFiles="$(TargetDir)$(TargetFileName)" DestinationFolder="..\HuurViolations.Api\Loaders\" SkipUnchangedFiles="true" />
  </Target>

</Project>
